{
  "if": {
    "properties": {
      "type": {
        "const": "ssh"
      }
    }
  },
  "then": {
    "required": [
      "user",
      "host",
      "directory"
    ],
    "properties": {
      "user": {
        "description": "User to login via ssh",
        "type": "string"
      },
      "host": {
        "description": "Host to connect via ssh",
        "type": "string"
      },
      "directory": {
        "description": "Absolute path of remote working directory",
        "type": "string"
      }
    }
  }
}
