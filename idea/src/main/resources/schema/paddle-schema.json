{
  "title": "Paddle.build",
  "description": "Configuration of Paddle build",
  "type": "object",
  "required": [
    "descriptor"
  ],
  "properties": {
    "descriptor": {
      "type": "object",
      "required": [
        "name",
        "version"
      ],
      "properties": {
        "name": {
          "description": "Name of the project",
          "type": "string"
        },
        "version": {
          "description": "Version of the project",
          "type": "string"
        }
      }
    },
    "roots": {
      "description": "Roots of the projects",
      "type": "object",
      "properties": {
        "sources": {
          "description": "Sources locations that should be used",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "tests": {
          "description": "Tests locations that should be used",
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "resources": {
          "description": "Resources locations that should be used",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "executor": {
      "description": "Executor to be used by Paddle to execute build commands",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "docker",
            "ssh",
            "local"
          ]
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "docker"
              }
            }
          },
          "then": {
            "required": [
              "image"
            ],
            "properties": {
              "image": {
                "description": "Image to be used for build",
                "type": "string"
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "ssh"
              }
            }
          },
          "then": {
            "required": [
              "user",
              "host",
              "directory"
            ],
            "properties": {
              "user": {
                "description": "User to login via ssh",
                "type": "string"
              },
              "host": {
                "description": "Host to connect via ssh",
                "type": "string"
              },
              "directory": {
                "description": "Absolute path of remote working directory",
                "type": "string"
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "local"
              }
            }
          },
          "then": {
          }
        }
      ]
    },
    "environment": {
      "description": "Environment that should be used by Paddle for Python build process",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "virtualenv",
            "global"
          ]
        }
      },
      "allOf": [
        {
          "if": {
            "properties": {
              "type": {
                "const": "virtualenv"
              }
            }
          },
          "then": {
            "required": [
              "path"
            ],
            "properties": {
              "path": {
                "description": "Path to virtual environment location",
                "type": "string"
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "global"
              }
            }
          },
          "then": {
          }
        }
      ]
    },
    "requirements": {
      "type": "object",
      "anyOf": [
        {
          "properties": {
            "file": {
              "description": "Path to the requirements.txt file",
              "type": "string"
            }
          }
        },
        {
          "properties": {
            "libraries": {
              "type": "array",
              "items": {
                "type": "object",
                "required": [
                  "name"
                ],
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "version": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      ]
    },
    "plugins": {
      "type": "object",
      "properties": {
        "enabled": {
          "description": "Array of enabled plugins identifiers",
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              "python",
              "docker",
              "ssh"
            ]
          }
        },
        "jars": {
          "description": "Array of paths to jars with custom plugins",
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "tasks": {
      "type": "object",
      "properties": {
        "linter": {
          "type": "object",
          "properties": {
            "mypy": {
              "type": "object",
              "properties": {
                "version": {
                  "type": "string"
                }
              }
            },
            "pylint": {
              "type": "object",
              "properties": {
                "version": {
                  "type": "string"
                }
              }
            }
          }
        },
        "tests": {
          "type": "object",
          "properties": {
            "pytest": {
              "type": "object",
              "properties": {
                "version": {
                  "type": "string"
                }
              }
            }
          }
        },
        "run": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {
                "type": "string"
              },
              "entrypoint": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  },
  "allOf": [
    {
      "if": {
        "required": [
          "executor"
        ],
        "properties": {
          "executor": {
            "required": [
              "type"
            ],
            "properties": {
              "type": {
                "const": "ssh"
              }
            }
          }
        }
      },
      "then": {
        "properties": {
          "plugins": {
            "properties": {
              "enabled": {
                "contains": {
                  "const": "ssh"
                }
              }
            }
          }
        }
      }
    },
    {
      "if": {
        "required": [
          "executor"
        ],
        "properties": {
          "executor": {
            "required": [
              "type"
            ],
            "properties": {
              "type": {
                "const": "docker"
              }
            }
          }
        }
      },
      "then": {
        "properties": {
          "plugins": {
            "properties": {
              "enabled": {
                "contains": {
                  "const": "docker"
                }
              }
            }
          }
        }
      }
    },
    {
      "if": {
        "required": [
          "environment"
        ],
        "properties": {
          "environment": true
        }
      },
      "then": {
        "properties": {
          "plugins": {
            "properties": {
              "enabled": {
                "contains": {
                  "const": "python"
                }
              }
            }
          }
        }
      }
    }
  ]
}
